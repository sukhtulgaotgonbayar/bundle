#!/bin/bash

# Define the input file
INFILE=input.txt

# Read the input file line by line
while read -r LINE
do
  # Print the line to query string
  response=$(curl -G --data-urlencode "text=$LINE" "http://127.0.0.1:8999/api?from=en&to=mn")
  echo $response | jq -r '.result' >> output.txt

  # remove line form input file
  sed '1d' $INFILE > tmpfile; mv tmpfile $INFILE
  # Sleep for 1 second
  sleep 1
done < "$INFILE"